@inherits LayoutComponentBase

@if (settingsPageClicked)
{
    <div class="page">
        <div class="main">
            <div class="top-row px-5 bg-dark border-bottom">
                <a class="bg-dark col-sm-3"></a><a href="">
                    <img src="/Images/HotelPriceScout.png"
                     asp-append-version="true" @onclick="HomeTitleClicked" width="400px">
                </a>
                <div class="col-sm-9">
                </div>
                <NavLink class="nav-link text-white col-sm-1" @onclick="SettingsPageClicked" href="Settings">
                    <span class="oi oi-cog" style="color:white;"> </span> Scout settings
                </NavLink>
            </div>
            <div class="content px-4">
                @Body
            </div>
        </div>
    </div>
}
else
{
    <div class="page">
        <div class="main">
            <div class="top-row px-5 bg-dark border-bottom">
                <a class="bg-dark col-sm-3"></a><a href="">
                    <img src="/Images/HotelPriceScout.png"
                     asp-append-version="true" @onclick="HomeTitleClicked" width="400px">
                </a>
                <div class="col-sm-9">
                </div>
                <NavLink class="nav-link text-white col-sm-1" @onclick="SettingsPageClicked" href="">
                    <span class="oi oi-home" style="color:white;"> </span> Home
                </NavLink>
            </div>
            <div class="content px-4">
                @Body
            </div>
        </div>
    </div>
}

@code {

    public bool settingsPageClicked = true;
    public void SettingsPageClicked()
    {
        settingsPageClicked = !settingsPageClicked;
    }

    public void HomeTitleClicked()
    {
        settingsPageClicked = true;
    }

}